<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        app:cardBackgroundColor="@android:color/white">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageView_profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/man"
                tools:src="@drawable/man"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/textView_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="@tools:sample/full_names"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView_profileImage"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView_profileImage"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageView_profileImage" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout">

            <LinearLayout
                    android:id="@+id/row_linkedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
            >

                <ImageView
                        android:id="@+id/imageView_linkedin"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:src="@drawable/linkedin"/>

                <TextView
                        android:id="@+id/textView_linkedIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:textSize="14sp"
                        tools:text="johnnyenglish"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/row_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:padding="4dp">

                <ImageView
                        android:id="@+id/imageView_twitter"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:src="@drawable/twitter"/>

                <TextView
                        android:id="@+id/textView_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:textSize="15sp"
                        tools:text="realjohnnyenglish"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/row_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:padding="4dp">

                <ImageView
                        android:id="@+id/imageView_github"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:src="@drawable/ic_github"/>

                <TextView
                        android:id="@+id/textView_github"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:textSize="14sp"
                        tools:text="dev_johnny"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/row_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:padding="4dp">

                <ImageView
                        android:id="@+id/imageView_phone"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:src="@drawable/ic_phone"/>

                <TextView
                        android:id="@+id/textView_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:textSize="14sp"
                        tools:text="@tools:sample/us_phones"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/row_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:padding="4dp">

                <ImageView
                        android:id="@+id/imageView_email"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:src="@drawable/mail"/>

                <TextView
                        android:id="@+id/textView_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="mail@gmail.com"
                        android:paddingLeft="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@mipmap/ic_person_add"
                android:id="@+id/imageButton_addFavorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@android:color/white"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:padding="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>