<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/johnny" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Johnny English"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="johnnyenglish@gmail.com"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_linkedIn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_linkedin"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_linkedin" />

                <TextView
                    android:id="@+id/textView_linkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="johnnyenglish"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_github"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_github"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_linkedin"
                    tools:srcCompat="@mipmap/ic_github" />

                <TextView
                    android:id="@+id/textView_github"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="dev_johnny"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_twitter"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_twitter"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_linkedin"
                    tools:srcCompat="@mipmap/ic_twitter" />

                <TextView
                    android:id="@+id/textView_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="realjohnnyenglish"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_fb"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_fb"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_linkedin"
                    tools:srcCompat="@mipmap/ic_fb" />

                <TextView
                    android:id="@+id/textView_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="Johnny English"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_gplus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_gplus"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_linkedin"
                    tools:srcCompat="@mipmap/ic_gplus" />

                <TextView
                    android:id="@+id/textView_gplus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="Johnny English"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_phone"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imageView_phone"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_phone" />

                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="+44 271 020 180"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>